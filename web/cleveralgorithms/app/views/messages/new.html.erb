<% form_for [:algorithm, @message]  do |f| %>
  <%= "f.error_messages"  %>

  <p>
    <%= f.label :msg %><br />
    <%= f.text_area :msg %>
  </p>
  <p>
    <%= f.label :algorithm %><br />
    <%= f.text_field :algorithm %>
  </p>
  <p>
    <%= f.label :section %><br />
    <%= f.text_field :section %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<% if !@algorithm.nil? %>
	<%= link_to 'Back', @algorithm %>
<% end %>