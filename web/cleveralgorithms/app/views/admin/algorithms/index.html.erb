<h1>Listing algorithms</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @algorithms.each do |a| %>
  <tr>
    <td><%=h a.name %></td>
    <td><%= link_to 'Edit', :controller => "admin/algorithms", :action => "edit", :id=>a.id %></td>
    <td><%= link_to 'Delete', :confirm => 'Are you sure?',  :controller => "admin/algorithms", :action => "destroy" %></td>
  </tr>
<% end %>
</table>

